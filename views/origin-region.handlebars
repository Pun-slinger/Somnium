<h1 id="cc-title" class="text-center">{{main_title}}</h1>

<h2 id="cc-subtitle" class="text-center mb-5">{{sub_title}}</h2>

<h1 id="overview-title" class="text-center">Overview</h1>
<p id="overview-text" class="text-center mx-5 mb-5">{{overview}}</p>

<h1 id="boon-title" class="text-center">Boons</h1>

<div id="boons" class="mb-5">
    {{#each boons}}
    <div class="row d-flex justify-content-center">
        <b>{{boon_name}}</b>
        <p class="mx-1">-</p>
        <p>{{boon_desc}}</p>
    </div>
    {{/each}}
</div>

<hr id="boons-hr">

<div id="region-specific-origin" class="d-flex flex-column text-center">
    {{#each region_suborigins}}

    {{#if ../parent_link}}
    <a class="rounded" href="/origins/{{../parent_link}}{{link}}">{{suborigin_name}}</a>
    {{else}}
    <a class="rounded" href="/origins/{{../sub_title}}{{link}}">{{suborigin_name}}</a>   
    {{/if}}

    {{/each}}
</div>