{{!-- With sub race --}}
<h1 id="cc-title" class="text-center">{{main_title}}</h1>

{{#if sub_races}}

{{#each sub_races}}

<h2 id="cc-subtitle" class="text-center mb-5">{{sub_title}}</h2>

<div id="race-main" class="mx-5 mb-2">
    
    {{#if img_link}}
    <img id="race-img" src="{{img_link}}" class="img-fluid mx-auto d-block mb-4 px-4">
    {{/if}}

    <div id="race-info" class="mx-4 mb-5 px-2 pt-2 rounded">

        <p class="ml-1"><b>Ability Scores</b>: {{ab_score}}</p>

        <p class="ml-1"><b>Size</b>: {{size_desc}} Your size is <b>{{size}}</b>.</p>

        <p class="ml-1"><b>Speed</b>: {{speed}}</p>

        <p class="ml-1"><b>Age</b>: {{age}}</p>

        <p class="ml-1"><b>Alignment</b>: {{alignment}}</p>

        <p class="ml-1"><b>Language</b>: {{language}}</p>

        <hr class="mx-5">

        {{#each additional_ab}}

        <p class="ml-1"><b>{{ab_name}}</b>:
            {{#if ab_desc}}
            {{ab_desc}}
            {{/if}}
        </p>
        {{#if table}}
        <table class="mx-5 mb-5">
            <tr>
                {{#each table/headers}}
                <th class="p-1">{{this}}</th>
                {{/each}}
            </tr>
            {{#each table/row}}
            <tr>
                {{#each this}}
                <td>{{this}}</td>
                {{/each}}
            </tr>
            {{/each}}
        </table>
        {{/if}}

        {{#if sub_ab}}
        <ul>
            {{#each sub_ab}}
            <li>
                {{#if ab_name}}
                <p class="ml-1"><b>{{ab_name}}</b>: {{ab_desc}}</p>
                {{else}}
                <p class="ml-1">{{ab_desc}}</p>
                {{/if}}

                {{#if table}}
                <table class="mx-5 mb-5">
